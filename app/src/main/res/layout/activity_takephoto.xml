<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.test.picture.view.widget.CameraView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/switch_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_camera_top_bar_sw_camera"
        />
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/switch_iv"
        android:id="@+id/flash_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_flash_on"
        />

    <Spinner
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/flash_iv"
        android:id="@+id/spinner_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.test.picture.view.widget.FocusImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/focus_iv"
        camera:focus_focusing_id="@drawable/focus_focusing"
        camera:focus_focussuccess_id="@drawable/focus_focused"
        camera:focus_focusfailed_id="@drawable/focus_focus_failed"/>
    <ImageView
        android:visibility="gone"
        android:background="#88000000"
        android:id="@+id/animate_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">



        <ImageView
            android:id="@+id/thumbnail_iv"
            android:layout_marginBottom="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text20"
            />

        <Button
            android:id="@+id/bt_photo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_ring"
            android:src="@drawable/select_circle" />

    </RelativeLayout>


</RelativeLayout>