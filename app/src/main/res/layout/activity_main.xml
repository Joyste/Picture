<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_album_multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_image_multiple" />


        <Button
            android:id="@+id/select_album_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_image_single" />

        <Button
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_photo" />

        <Button
            android:id="@+id/edit_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_image" />

        <Button
            android:id="@+id/custom_puzzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_puzzle" />
    </LinearLayout>

</ScrollView>